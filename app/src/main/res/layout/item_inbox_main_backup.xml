<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="6dp">

    <TextView
        android:text="skadimoolam@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_mail_sender"
        android:paddingBottom="6dp"/>

    <TextView
        android:text="11/11/2017 12:34 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_mail_time" />

    <TextView
        android:text="Subject Line"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mail_subject"
        android:layout_below="@+id/tv_mail_sender"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="6dp"
        android:text="message short"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mail_subject"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_mail_message" />

    <View
        android:layout_below="@+id/tv_mail_message"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>